<link rel="stylesheet" type="text/css" href="forms.css">
<%= form_for([@user ,@game ,@state_metric]) do |f| %>
  <% if @state_metric.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@state_metric.errors.count, "error") %> prohibited this state_metric from being saved:</h2>

      <ul>
      <% @state_metric.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "left">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name,:class => 'form-control'%>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description,:class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :state %><br>
      <%= f.text_field :state,:class => 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary'%>
  </div>
<% end %>
