<p id="notice"><%= notice %></p>

<h1>Listing State Metrics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @state_metrics.each do |state_metric| %>
      <tr>
        <td><%= state_metric.name %></td>
        <td><%= state_metric.description %></td>
        <td><%= state_metric.state %></td>
        <td><%= link_to 'Show', [@user , @game , state_metric] %></td>
        <td><%= link_to 'Edit', edit_user_game_state_metric_path(@user ,@game , state_metric) %></td>
        <td><%= link_to 'Destroy', [@user ,@game , state_metric], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

