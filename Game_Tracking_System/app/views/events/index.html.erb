<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Event ID</th>
      <th>Event description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.event_id %></td>
        <td><%= event.event_description %></td>
        <td><%= link_to 'Show', [@user , @game , event] %></td>
        <td><%= link_to 'Edit', edit_user_game_event_path(@user , @game , event) %></td>
        <td><%= link_to 'Destroy', [@user , @game , event], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

