<link rel="stylesheet" type="text/css" href="forms.css">
<%= form_for([@user , @game ,@value_metric]) do |f| %>
  <% if @value_metric.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@value_metric.errors.count, "error") %> prohibited this value_metric from being saved:</h2>

      <ul>
      <% @value_metric.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class = "left">
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name,:class => 'form-control' %>
  </div>
