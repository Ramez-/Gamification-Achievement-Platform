    <%= f.label :description %><br>
    <%= f.text_area :description,:class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :min %><br>
    <%= f.number_field :min,:class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.number_field :start,:class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :max %><br>
    <%= f.number_field :max,:class => 'form-control' %>
  </div>
</div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary'%>
  </div>
<% end %>
