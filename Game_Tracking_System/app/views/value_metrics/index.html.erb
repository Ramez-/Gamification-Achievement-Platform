<p id="notice"><%= notice %></p>

<h1>Listing Value Metrics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Min</th>
      <th>Start</th>
      <th>Max</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @value_metrics.each do |value_metric| %>
      <tr>
        <td><%= value_metric.name %></td>
        <td><%= value_metric.description %></td>
        <td><%= value_metric.min %></td>
        <td><%= value_metric.start %></td>
        <td><%= value_metric.max %></td>
        <td><%= link_to 'Show', [@user , @game , value_metric] %></td>
        <td><%= link_to 'Edit', edit_user_game_value_metric_path(@user , @game , value_metric) %></td>
        <td><%= link_to 'Destroy', [@user , @game , value_metric] , data: { confirm: 'Are you sure?' } , method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

