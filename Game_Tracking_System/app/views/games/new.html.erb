<h1>New Game</h1>

<body>

<%= form_for ([@user , @game]), :url => user_games_path, :html => { :multipart => true } do |form| %>
<%= form.label :name %>
  <%= form.text_field :name %>
  <br> <br>
  <%= form.label :game_id %>
  <%= form.text_field :game_id %> <br> <br>
  <%= form.label :game_timezone %>
  <%= form.text_field :game_timezone %> <br><br>
  <%= form.label :description %>
  <%= form.text_field :description %><br><br>
  <%= form.label :Upload_logo %>
  <%= form.file_field :photo %>

  <br>
  <br>
  <%= form.submit %>

<% end %>

<%= link_to 'Back', user_games_path %>

</body>
