<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-sm-3">
<%= image_tag  @game.photo.url(:thumb) %>
<p>
  <div class="name"><%= @game.name %></div>
</p>

<p>
  <strong>Game ID :</strong>
  <%= @game.game_id %>
</p>

<p>
  <strong>Game timezone:</strong>
  <%= @game.game_timezone %>
</p>

<p>
  <strong>Url:</strong>
  <%= @game.url %>
</p>
<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>
</div>
<div class="col-sm-3">
<% if @value_metrics.count > 0 %>
<div>
  <h5>Value Metrics for game:</h5>
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Min</th>
      <th>Max</th>
      <th>Start</th>
    </tr> 
    <% @value_metrics.each do |v| %>
    <tr>
      <td><%= v.name %></td>
      <td><%= v.description %></td>
      <td><%= v.min %></td>
      <td><%= v.max %></td>
      <td><%= v.start %></td>
    <% end %>  
    </tr>
    </tr>
  </table>
</div>
<% end %>
</div>
<div class="col-sm-3">
<% if @state_metrics.count > 0 %>
<div>
  <h5>State Metrics for game:</h5>
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Min</th>
      <th>Max</th>
      <th>Start</th>
    </tr> 
    <% @state_metrics.each do |v| %>
    <tr>
      <td><%= v.name %></td>
      <td><%= v.description %></td>
      <td><%= v.state %></td>
    <% end %>  
    </tr>
    </tr>
  </table>
</div>
<% end %>
</div>
<div class="col-sm-3">

<% if @events.count > 0 %>
<div>
  <h5>Operations for game:</h5>
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>ID</th>
    </tr> 
    <% @events.each do |v| %>
    <tr>
      <td><%= v.name %></td>
      <td><%= v.event_description %></td>
      <td><%= v.event_id %></td>
    <% end %>  
    </tr>
    </tr>
  </table>
</div>
<% end %>
</div>
</div>

<%= button_to "Add Player", user_game_players_path(@user, @game) , class: "btn btn-primary", :method => "get" %>
<br>
<%= link_to 'Add a value metric' , new_user_game_value_metric_path(@user ,@game) %>

<%= link_to 'Add a state metric' , new_user_game_state_metric_path(@user ,@game) %>

<%= link_to 'Add a Operation' , new_user_game_event_path(@user ,@game) %>
<%= link_to 'Add a player' , new_user_game_player_path(@user,@game) %>

<%= link_to 'Edit', edit_user_game_path(@user , @game) %>

