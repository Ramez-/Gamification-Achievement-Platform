<link rel="stylesheet" type="text/css" href="forms.css">
<%= form_for([@user ,@game ,@rule]) do |f| %>
  <% if @rule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
      <% @rule.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class = "left">
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name,:class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :metric_id %> <br>
 
    <%= f.collection_select :metric_id, Metric.all,  :id , :name , { :selected => Metric.name }%> 

  </div>

<div class="field">
    <%= f.label :operation %><br>
    <%= f.collection_select :operation, ['>','<','<=','>=','=','!='], :to_s, :to_s, include_blank: false , :class =>'dropdown-menu' %>

 <!--   <%= f.text_field :operation %> -->
  </div>

  
  <div class="field">
    <%= f.label :value %><br>
  <%= f.text_field :value,:class => 'form-control'  %>
  </div>
  </div>
